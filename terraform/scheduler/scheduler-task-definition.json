[
  {
    "name": "postgres",
    "image": "postgres:12",
    "memoryReservation": 128,
    "essential": true,
    "command": ["-c", "shared_preload_libraries=pg_stat_statements"],
    "portMappings": [
      {
        "containerPort": 5432,
        "hostPort": 5432
      }
    ],
    "mountPoints": [{
      "sourceVolume": "postgres-data",
      "containerPath": "/var/lib/postgresql/data"
    }],
    "environment": [
      { "name": "POSTGRES_PASSWORD", "value": "${pg_password}" }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "serratus-scheduler",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "postgres"
      }
    }
  },
  {
    "name": "flask",
    "image": "${dockerhub_account}/serratus-scheduler",
    "cpu": 256,
    "memoryReservation": 128,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8000,
        "hostPort": 8000
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "serratus-scheduler",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "flask_app"
      }
    }
  },
  {
    "name": "cron",
    "image": "${dockerhub_account}/serratus-scheduler",
    "cpu": 256,
    "memoryReservation": 128,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 9101,
        "hostPort": 9101
      }
    ],
    "entrypoint": ["flask", "cron"],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "serratus-scheduler",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "cron"
      }
    }
  }
]
